@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3 mb-4">Svi timovi</h2>

<div id="content"></div>

<div class="modal fade" id="modal-dodaj" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading">Dodaj tim</p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-9 text-center">
                        <div class="md-form">
                            <input type="text" id="naziv" class="form-control">
                            <label for="form1">Naziv</label>
                        </div>
                        <div class="md-form">
                            <input type="text" id="grad" class="form-control">
                            <label for="form1">Grad</label>
                        </div>
                        <div class="md-form">
                            <input type="text" id="trener" class="form-control">
                            <label for="form1">Trener</label>
                        </div>
                        <div class="md-form">
                            <input type="text" id="stadion" class="form-control">
                            <label for="form1">Stadion</label>
                        </div>
                        <div class="md-form">
                            <label class="form-check-label">Konferencija:</label>
                        </div>
                        <br />
                        <br />
                        <div class="custom-control custom-radio custom-control-inline mr-3">
                            <input type="radio" class="custom-control-input" id="defaultInline1" value="1" name="konferencija">
                            <label class="custom-control-label" for="defaultInline1">Istok</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline mr-3">
                            <input type="radio" class="custom-control-input" id="defaultInline2" value="2" name="konferencija">
                            <label class="custom-control-label" for="defaultInline2">Zapad</label>
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>

            <div class="modal-footer justify-content-center">
                <button id="btn-dodaj" type="button" class="btn btn-sm btn-info" data-dismiss="modal">Potvrdi</button>
                <button type="button" class="btn btn-sm btn-outline-info waves-effect" data-dismiss="modal">Otkaži</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Site/tabelaTimovi.js"></script>
}
